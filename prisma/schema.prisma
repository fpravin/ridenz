generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid()) @map("_id")
  firstName   String
  lastName    String
  phoneNumber String?
  email       String  @unique
  password    String
  isAdmin     Boolean
  products Product[]
  createdAt DateTime @default(now())
}

model Product{
  productId String  @id @default(uuid()) @map("_id")
  name String
  description String?
  price   Float
  qauntity Int @default(0)
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}